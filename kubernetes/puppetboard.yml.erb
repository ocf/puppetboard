apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: puppetboard
  ports:
    - port: 80
      targetPort: 8080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: puppetboard
spec:
  replicas: 1
  selector:
    matchLabels:
      app: puppetboard
  template:
    metadata:
      labels:
        app: puppetboard
    spec:
      containers:
        - name: auth
          image: "keycloak/keycloak-gatekeeper:6.0.1"
          args:
            - --client-id=puppetboard
            - --client-secret=$(KEYCLOAK_SECRET)
            - --encryption-key=$(ENCRYPTION_KEY)
            - --redirection-url=https://puppet.ocf.berkeley.edu/
            - --discovery-url=https://auth.ocf.berkeley.edu/auth/realms/ocf
            - --enable-default-deny=true
            - --enable-session-cookies
            - --listen=:8080
            - --upstream-url=http://localhost:8000
            - --resources=uri=/*|roles=ocfstaff
          env:
            - name: KEYCLOAK_SECRET
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: secret
            - name: ENCRYPTION_KEY
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: encryption_key
          ports:
            - containerPort: 8080
          livenessProbe:
            tcpSocket:
              port: 8080
            initialDelaySeconds: 15
            periodSeconds: 20
          readinessProbe:
            tcpSocket:
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 5
        - name: puppetboard
          image: "docker.ocf.berkeley.edu/puppetboard:<%= version %>"
          resources:
            limits:
              memory: 2048Mi
              cpu: 750m
          ports:
            - containerPort: 8000
          volumeMounts:
            - mountPath: /opt/puppetboard/keys
              name: secrets
      volumes:
        - name: secrets
          hostPath:
            path: /opt/share/kubernetes/secrets/puppetboard/keys
            type: Directory
      dnsPolicy: ClusterFirst
      dnsConfig:
        searches:
          - ocf.berkeley.edu
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: puppet.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-client
type: Opaque
stringData:
  secret: <%= keycloak_secret %>
  encryption_key: <%= keycloak_encryption_key %>
